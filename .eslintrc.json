{
  "extends": ["next/core-web-vitals", "plugin:prettier/recommended"],
  "rules": {
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "tabWidth": 2,
        "useTabs": false
      }
    ]
  }
}
